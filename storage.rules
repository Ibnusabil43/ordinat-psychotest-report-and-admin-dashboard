rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isTester() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'tester';
    }
    
    // Psychotest results storage
    match /psychotest-results/{entityType}/{entityId}/{fileName} {
      // Only admins can upload
      allow create: if isAdmin() && 
                       request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                       request.resource.contentType == 'application/pdf';
      
      // Only admins can delete
      allow delete: if isAdmin();
      
      // Anyone can read (download) - token verification done in Firestore
      // Note: For production, consider using Firebase Auth custom claims
      // or Cloud Functions to generate signed URLs
      allow read: if true;
    }
    
    // Profile photos (if needed in future)
    match /profile-photos/{userId}/{fileName} {
      // Users can manage their own profile photos
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 && // Max 2MB
                      request.resource.contentType.matches('image/.*');
    }
  }
}
